{
  "name": "serverless-testing-workshop",
  "version": "0.1.0",
  "description": "Sample application for use in the Serverless Testing Workshop",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "tsc": "npm run rest-api:tsc",
    "infra:deploy": "cd ./services/infra && cross-env STAGE=${STAGE:=dev} sls deploy -s $STAGE",
    "infra:tsc": "cd ./services/infra && tsc -w",
    "rest-api:tsc": "cd ./services/rest-api && tsc -w",
    "rest-api:dotenv": "cd ./services/rest-api && cross-env STAGE=${STAGE:=dev} sls export-env -s $STAGE",
    "rest-api:deploy": "cd ./services/rest-api && cross-env STAGE=${STAGE:=dev} sls deploy -s $STAGE",
    "rest-api:deploy-test": "npm run rest-api:deploy && npm run rest-api:dotenv && npm run test-e2e",
    "env": "npm run rest-api:dotenv",
    "test": "npm run test-unit",
    "test-unit": "cd ./services/rest-api && jest -c jest.config.unit.js",
    "test-integration": "cd ./services/rest-api && TEST_MODE=LOCAL_HANDLER jest -c jest.config.integration.js -t '^(?!.*(\\[e2e\\])).*$'",
    "test-e2e": "cd ./services/rest-api && TEST_MODE=REMOTE_TRIGGER jest -c jest.config.e2e.js -t '^(?!.*(\\[integration\\])).*$'",
    "test-all": "npm run test-unit && npm run test-integration && npm run test-e2e"
  },
  "keywords": [
    "serverless",
    "testing",
    "AWS",
    "Lambda"
  ],
  "author": "Paul Swail",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https: //github.com/serverlessfirst/serverless-testing-workshop"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.76",
    "@types/bluebird": "^3.5.33",
    "@types/faker": "^5.5.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "aws-testing-library": "^1.1.1",
    "concurrently": "^6.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "serverless": "2.38.0",
    "serverless-esbuild": "^1.10.3",
    "serverless-export-env": "^1.4.4",
    "serverless-iam-roles-per-function": "^3.1.0",
    "ts-jest": "^26.5.5",
    "ts-loader": "^9.1.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@aws/dynamodb-auto-marshaller": "^0.7.1",
    "@dazn/lambda-powertools-logger": "^1.28.1",
    "@types/serverless": "^1.78.26",
    "aws-sdk": "^2.896.0",
    "axios": "^0.21.1",
    "bluebird": "^3.7.2",
    "lodash": "^4.17.21",
    "uuid": "^8.3.2"
  }
}
